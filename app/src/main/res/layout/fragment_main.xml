<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.main.MainFragment">

    <TextView
            android:layout_width="265dp"
            android:layout_height="33dp"
            android:text="TODO LIST"
            android:gravity="center"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp" android:id="@+id/textView"
            tools:ignore="HardcodedText"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/m_recycler_items"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        tools:listitem="@layout/row_items"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent">

        <android.support.design.widget.FloatingActionButton
                android:id="@+id/m_floating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
                android:src="@drawable/ic_plus"/>

    </FrameLayout>

</android.support.constraint.ConstraintLayout>